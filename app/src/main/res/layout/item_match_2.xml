<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="30/10 16:00" />

    <TextView
        android:id="@+id/text_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_datetime"
        android:gravity="center"
        tools:text="Arena Fonte Nova" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="3 X 0"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/img_home_team"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_place"
        android:layout_toLeftOf="@id/text_score"
        android:padding="8dp"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_away_team"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_place"
        android:layout_toRightOf="@id/text_score"
        android:padding="8dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_home_team"
        style="@style/TextMatchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/img_home_team"
        android:layout_toLeftOf="@id/text_score"
        android:gravity="center"
        tools:text="Bahia" />

    <TextView
        android:id="@+id/text_away_team"
        style="@style/TextMatchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_away_team"
        android:layout_toRightOf="@id/text_score"
        android:gravity="center"
        tools:text="America / MG" />
</merge>
